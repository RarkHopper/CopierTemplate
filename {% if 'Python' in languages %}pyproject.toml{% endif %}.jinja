{# pyproject.toml - Python設定（ruff, pytest） #}
{% if 'Python' in languages -%}
[project]
name = "{{ project_name | lower | replace(' ', '-') }}"
version = "0.1.0"
description = ""
readme = "README.md"
requires-python = ">={{ python_version | replace('py', '') | replace('3', '3.') }}"
dependencies = []

[project.optional-dependencies]
dev = [
{%- if enable_linters %}
    "ruff>=0.9.0",
{%- endif %}
    "pytest>=8.0.0",
    "pytest-cov>=6.0.0",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"
{% if enable_linters %}

[tool.ruff]
target-version = "{{ python_version }}"
line-length = 88
indent-width = 4

[tool.ruff.lint]
select = [
    "E",      # pycodestyle errors
    "W",      # pycodestyle warnings
    "F",      # Pyflakes
    "I",      # isort
    "B",      # flake8-bugbear
    "C4",     # flake8-comprehensions
    "UP",     # pyupgrade
    "ARG",    # flake8-unused-arguments
    "SIM",    # flake8-simplify
]
ignore = [
    "E501",   # line too long (handled by formatter)
    "B008",   # do not perform function calls in argument defaults
]

[tool.ruff.lint.isort]
known-first-party = ["{{ project_name | lower | replace(' ', '_') | replace('-', '_') }}"]

[tool.ruff.format]
quote-style = "double"
indent-style = "space"
skip-magic-trailing-comma = false
line-ending = "auto"
{%- endif %}

[tool.pytest.ini_options]
testpaths = ["tests"]
addopts = "-v --cov --cov-report=term-missing"

[tool.coverage.run]
source = ["src"]
omit = ["tests/*"]

[tool.coverage.report]
exclude_lines = [
    "pragma: no cover",
    "if TYPE_CHECKING:",
    "if __name__ == .__main__.:",
]
{% endif -%}
